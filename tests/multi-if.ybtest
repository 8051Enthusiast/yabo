import std
def *u32b_or_16b(n: int) = {
  | let _ = n if 0
    let return = std.u32b
  | let return = std.u16b
}
export def *test = {
  tag: ~
  parser: u32b_or_16b(tag)
  | return: parser if 0..1000
  | let return = 123
}

