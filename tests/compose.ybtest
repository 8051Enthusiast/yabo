import std
def *skip(skipper: *[int]) = {
    skipper, return: /.*/
}

def *skip_4 = skip(/..../)

def *after_hello = skip(/.*?hello/)

def *skip_non_num = skip(/[^0-9]*/)

export def *test = skip_4
                |> after_hello
                |> skip_non_num
                |> std.basenum(10)

